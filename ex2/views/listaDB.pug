extends layout
block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Plantas
    .w3-container
      table.w3-table-all
        tr
          th Id
          th Freguesia
          th Espécie
          th Número de intervenções
        each planta in plantas
          tr(onclick='changePage(\"' + planta._id + '\")')
            td= planta._id
            td= planta.freguesia
            td= planta.especie
            td= planta.estado
            td= planta.numero_de_intervencoes
              
    footer.w3-container.w3-teal
      h5 Generated by _____
