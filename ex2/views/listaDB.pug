extends layout
block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Plantas
    .w3-container
      table.w3-table-all
        tr
          th Id
          th Freguesia
          th Espécie
          th Número de intervenções
        each planta in plantas
            td #[a(href="/"+planta._id)= planta._id]
            td= planta.Freguesia
            td #[a(href="/especies/"+planta.Espécie)= planta.Espécie]
            td= planta.Estado
            td= planta['Número de intervenções']
              
    footer.w3-container.w3-teal
      h5 Generated by _____
